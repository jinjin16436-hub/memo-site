{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "worker/**", ".github/**"],
    "headers": [
      { "source": "**/*.js", "headers": [{ "key": "Cache-Control", "value": "public, max-age=3600" }] },
      { "source": "index.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
    ]
  }
}
